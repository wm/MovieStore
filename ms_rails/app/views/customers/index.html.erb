<h1>Listing customers</h1>

<table>
  <tr>
    <th>F name</th>
    <th>L name</th>
    <th>Street1</th>
    <th>Street2</th>
    <th>City</th>
    <th>Zip</th>
    <th>State</th>
    <th>Phone</th>
  </tr>

<% @customers.each do |customer| %>
  <tr>
    <td><%=h customer.f_name %></td>
    <td><%=h customer.l_name %></td>
    <td><%=h customer.street1 %></td>
    <td><%=h customer.street2 %></td>
    <td><%=h customer.city %></td>
    <td><%=h customer.zip %></td>
    <td><%=h customer.state %></td>
    <td><%=h customer.phone %></td>
    <td><%= link_to 'Show', customer %></td>
    <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
    <td><%= link_to 'Destroy', customer, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

