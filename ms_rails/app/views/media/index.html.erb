<h1>Listing media</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Year</th>
    <th>Genre</th>
    <th>Media type</th>
  </tr>

<% @media.each do |medium| %>
  <tr>
    <td><%=h medium.title %></td>
    <td><%=h medium.year %></td>
    <td><%=h medium.genre %></td>
    <td><%=h medium.media_type %></td>
    <td><%= link_to 'Show', medium %></td>
    <td><%= link_to 'Edit', edit_medium_path(medium) %></td>
    <td><%= link_to 'Destroy', medium, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New medium', new_medium_path %>